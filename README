

Dockerfile:
#######################################################################################################################

FROM debian AS HisiBuilder

# Install dependencies
RUN apt-get update && apt-get install -y -q \
    vim \
    flex \
    bison \
    bash \
    bc \
    binutils \
    build-essential \
    bzip2 \
    ca-certificates \
    cpio \
    debianutils \
    file \
    g++ \
    gcc \
    git \
    graphviz \
    gzip \
    libncurses5-dev \
    locales \
    make \
    patch \
    perl \
    python \
    python-matplotlib \
    rsync \
    sed \
    tar \
    unzip \
    wget \
    u-boot-tools \
    gcc-multilib \
    g++-multilib \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

RUN sed -i "s/^# en_US.UTF-8/en_US.UTF-8/" /etc/locale.gen && locale-gen && update-locale LANG=en_US.UTF-8

RUN git clone --depth 1 https://github.com/Tryll/hi35xx-buildroot /buildroot

WORKDIR /buildroot

RUN ["/bin/bash"]
#######################################################################################################################

Docker:
Docker build .
docker run --rm --it -m 4GB id

In container run:
#######################################################################################################################
make hi3516d_defconfig -j5
FORCE_UNSAFE_CONFIGURE=1 make -j5

